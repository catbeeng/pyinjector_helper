{
  "name": "pyinjector-helper",
  "displayName": "pyinjector_helper",
  "description": "VSCode extension to assist Python Injector module generation.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyinjector-helper.createInjectorModule",
        "title": "Create/Update Injector Module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "pyinjector-helper.createInjectorModule",
          "when": "resourceExtname == .py",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "pyinjector-helper.createInjectorModule",
          "when": "resourceExtname == .py",
          "group": "navigation"
        }
      ]
    },
    "configuration":{
      "title": "%pyInjectorHelper.configTitle%",
      "properties": {
        "pyInjectorHelper":{
          "type": "object",
          "properties": {
            "moduleDir": {
              "type": "string",
              "default": "src/di/modules",
              "markdownDescription": "%pyInjectorHelper.moduleDir.desc%",
              "order": 1,
              "scope": "resource"
            },
            "fileName": {
              "type": "object",
              "properties": {
                "remove": {
                  "type": "array",
                  "items": { "type": "string" },
                  "default": ["^interface_", "_interface$"],
                  "markdownDescription": "%pyInjectorHelper.fileName.remove.desc%",
                  "order": 2,
                  "scope": "resource"
                },
                "addPrefix": {
                  "type": "string",
                  "default": "",
                  "markdownDescription": "%pyInjectorHelper.fileName.addPrefix.desc%",
                  "order": 3,
                  "scope": "resource"
                },
                "addSuffix": {
                  "type": "string",
                  "default": "_module",
                  "markdownDescription": "%pyInjectorHelper.fileName.addSuffix.desc%",
                  "order": 4,
                  "scope": "resource"
                }
              }
            },
            "className": {
              "type": "object",
              "properties": {
                "deriveFromFileName": {
                  "type": "boolean",
                  "default": true,
                  "markdownDescription": "%pyInjectorHelper.className.deriveFromFileName.desc%",
                  "order": 5,
                  "scope": "resource"
                },
                "remove": {
                  "type": "array",
                  "items": { "type": "string" },
                  "default": ["^Interface", "^interface_", "_interface$", "Interface$"],
                  "markdownDescription": "%pyInjectorHelper.className.remove.desc%",
                  "order": 6,
                  "scope": "resource"
                },
                "addPrefix": {
                  "type": "string",
                  "default": "",
                  "markdownDescription": "%pyInjectorHelper.className.addPrefix.desc%",
                  "order": 7,
                  "scope": "resource"
                },
                "addSuffix": {
                  "type": "string",
                  "default": "Module",
                  "markdownDescription": "%pyInjectorHelper.className.addSuffix.desc%",
                  "order": 8,
                  "scope": "resource"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
